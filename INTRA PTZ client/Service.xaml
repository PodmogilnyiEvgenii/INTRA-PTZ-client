<Window x:Class="INTRA_PTZ_client.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INTRA_PTZ_client"
        mc:Ignorable="d"
        Closing="ServiceWindow_Closing"
        Loaded="ServiceWindow_Loaded"
        x:Name="serviceWindow" Title="Сервис" HorizontalAlignment="Left" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0" Height="30" Margin="10,0,10,0">
            <TextBlock x:Name="ipOptionsText" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Text="192.168.1.1:8888"/>            
        </DockPanel>
        
        <DockPanel Grid.Column="0" Grid.Row="1" Margin="10,0,10,0">
            <TextBox  Width="30" Height="20" Margin="2,10,0,0" Text="AD" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" IsEnabled="False"/>
            <TextBox  Width="30" Height="20" Margin="2,10,0,0" Text="K1" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" IsEnabled="False"/>
            <TextBox  Width="30" Height="20" Margin="2,10,0,0" Text="K2" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" IsEnabled="False"/>
            <TextBox  Width="30" Height="20" Margin="2,10,0,0" Text="Dt1" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" IsEnabled="False"/>
            <TextBox  Width="30" Height="20" Margin="2,10,0,0" Text="Dt2" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" IsEnabled="False"/>
            <TextBox  Width="30" Height="20" Margin="2,10,0,0" Text="SS" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" IsEnabled="False"/>
            <TextBox  x:Name="isOnline" Width="90" Height="20" Margin="10,10,0,0" Text="status" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" IsEnabled="False"/>
        </DockPanel>

        <DockPanel Grid.Column="1" Grid.Row="2" Height="45" Margin="10,0,10,0"> 
            <TextBox x:Name="request1" Width="30" Height="20" Margin="2,10,0,0" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBox x:Name="request2" Width="30" Height="20" Margin="2,10,0,0" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBox x:Name="request3" Width="30" Height="20" Margin="2,10,0,0" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBox x:Name="request4" Width="30" Height="20" Margin="2,10,0,0" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBox x:Name="request5" Width="30" Height="20" Margin="2,10,0,0" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBox x:Name="request6" Width="30" Height="20" Margin="2,10,0,0" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"/>

            <Button x:Name="requestSendButton" Content="Отправить" Margin="10,8,0,0" Width="90" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Click="RequestSendButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>
        </DockPanel>

        <DockPanel Grid.Column="0" Grid.Row="3" Height="45" Margin="10,0,10,0">
            <TextBox x:Name="answerTextBox" Width="190" Height="20" Margin="2,10,0,0" Text="" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center"/>
        </DockPanel>

        <DockPanel Grid.Column="0" Grid.Row="4" Height="45" Margin="10,0,10,0">            
        </DockPanel>

        <DockPanel Grid.Column="0" Grid.Row="5" Height="45" Margin="10,0,10,0">
            <Button x:Name="serviceCloseButton" Content="Закрыть" Margin="0,10,0,0" Width="90" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ServiceCloseButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>            
        </DockPanel>
    </Grid>
</Window>
